<Window x:Class="OPSKWA.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OPSKWA Loading" 
        Height="400" Width="600"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        Background="Transparent"
        AllowsTransparency="True">
    <Border Background="#FF1E1E1E" CornerRadius="10">
        <Grid>
            <Image Source="/opskwaSplash.png" Stretch="UniformToFill"/>
            <StackPanel VerticalAlignment="Bottom" Margin="20">
                <ProgressBar IsIndeterminate="True" Height="6" Background="Transparent" Foreground="#FF1E1E1E"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>